<Window x:Class="HashCheckerUI.Forms.CheckTextWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:HashCheckerUI.Forms"
		mc:Ignorable="d"
		Title="Check Text" 
		Height="450" 
		Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		
		<TextBlock Text="Input text"
				   Grid.Row="0"
				   Margin="5"/>

		<TextBox Grid.Row="1"
				 AcceptsTab="True"
				 AcceptsReturn="True"
				 TextWrapping="Wrap"
				 VerticalScrollBarVisibility="Auto"/>
		
		<StackPanel Orientation="Horizontal"
		            Grid.Row="2"
					Margin="0 5"
		            HorizontalAlignment="Right">

			<Button Width="100"
			        Content="Clear"
			        Margin="0 0 5 0"/>

			<Button Width="100"
			        Content="Check"
			        Margin="0 0 5 0"/>
		</StackPanel>

		
		<StatusBar Grid.Row="3">
			<TextBlock Text="LOl kekus"/>
		</StatusBar>
	</Grid>
</Window>
